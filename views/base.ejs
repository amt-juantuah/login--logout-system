<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container border py-5">
        <div class="blinking-dot"></div>
        <div class="title pb-5">
            <h2 class="bold font-weight-bolder">Bridge Login System</h2>
            <% if(locals.logout) { %>
                <div class="alter alert-success text-center">
                    <%= logout%>
                </div>
            <% } %>
            <span>Log in for the existing user</span>
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <input type="text" class="cap form-control" id="" placeholder="Enter Username" name="username">
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="" placeholder="Enter Email Address" name="email">
            </div>
            <div class="form-group pb-2">
                <input type="password" class="form-control" id="" placeholder="Enter Password" name="password">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            <div class="eye"></div>
        </form>
    </div>
</div>


<%- include('footer') -%>